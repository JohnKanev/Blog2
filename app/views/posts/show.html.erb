<hr>
<div class="container">
  <h1><%= @post.title %></h1>
    <p><%= @post.body %><p>
      <%= link_to "Edit Post", edit_post_path(@post) ,:class => "btn btn-default"%>
    <%= link_to 'Destroy', post_path(@post),:class => "btn btn-default",:confirm => "Are you sure?", :method =>:delete  %>
  </div>
  <div class="container">
<hr>
  <h2>Comments</h2>

  <% @post.comments.each do |comm| %>
  <div class="container">


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><strong>  <%= comm.commenter %> </strong></h3>
  </div>
  <div class="panel-body">
        <%= comm.body %>
  </div>
</div>


    </div>
  <% end %>

  <h2> Add a comment</h2>
  <%= form_for([@post,@post.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter %> <br>
      <%= f.text_field :commenter , class: 'form-control',:placeholder => 'Name'%>
    </p>
    <p>
      <%= f.label :body%> <br>
      <%= f.text_area :body , class: 'form-control',:placeholder => 'Comment'%>
    </p>
    <p>
      <%= f.submit nil, :class => 'btn btn-primary'%>
    </p>
  <% end %>
</div>
